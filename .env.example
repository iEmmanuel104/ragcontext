# ===========================================
# ContextInject Environment Configuration
# ===========================================
# Copy this file to .env and fill in values

# ---------- Core ----------
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# ---------- Database ----------
DATABASE_URL=postgresql://contextinject:contextinject_dev@localhost:5432/contextinject
DATABASE_POOL_MAX=20
DATABASE_POOL_MIN=2

# ---------- Redis ----------
REDIS_URL=redis://localhost:6379

# ---------- Qdrant ----------
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ---------- Auth ----------
JWT_SECRET=change-me-in-production
JWT_EXPIRY=1h
API_KEY_SALT=change-me-in-production

# ---------- CORS ----------
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ---------- Encryption ----------
ENCRYPTION_KEY=change-me-32-byte-hex-key-here!!
ENCRYPTION_KEY_ID=v1

# ---------- Cohere ----------
COHERE_API_KEY=
COHERE_EMBED_MODEL=embed-v4.0
COHERE_RERANK_MODEL=rerank-v3.5

# ---------- Rate Limiting ----------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_FREE=30
RATE_LIMIT_MAX_PRO=300
RATE_LIMIT_MAX_ENTERPRISE=3000
