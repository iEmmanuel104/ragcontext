{
  "name": "@contextinject/worker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/main.ts",
    "start": "node dist/main.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@contextinject/core": "workspace:*",
    "@contextinject/queue": "workspace:*",
    "@contextinject/db": "workspace:*",
    "@contextinject/logger": "workspace:*",
    "@contextinject/config": "workspace:*",
    "@contextinject/types": "workspace:*",
    "@contextinject/errors": "workspace:*",
    "@contextinject/embeddings": "workspace:*",
    "@contextinject/vector-store": "workspace:*",
    "@contextinject/chunker": "workspace:*",
    "@contextinject/parser": "workspace:*",
    "bullmq": "^5.34.0"
  },
  "devDependencies": {
    "@types/node": "^22",
    "tsx": "^4.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}
